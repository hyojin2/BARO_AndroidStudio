<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/content_padding"
    tools:context=".PreviewPdf">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_padding"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/step_circle_size"
            android:layout_height="@dimen/step_circle_size"
            android:background="@drawable/step_circle_complete" />

        <View
            android:layout_width="50dp"
            android:layout_height="@dimen/border_height"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/content_padding"
            android:background="@color/step_line_complete" />

        <TextView
            android:layout_width="@dimen/step_circle_size"
            android:layout_height="@dimen/step_circle_size"
            android:background="@drawable/step_circle_complete" />

        <View
            android:layout_width="50dp"
            android:layout_height="@dimen/border_height"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/content_padding"
            android:background="@color/step_line_complete" />

        <TextView
            android:layout_width="@dimen/step_circle_size"
            android:layout_height="@dimen/step_circle_size"
            android:background="@drawable/step_circle_complete" />

        <View
            android:layout_width="50dp"
            android:layout_height="@dimen/border_height"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/content_padding"
            android:background="@color/step_line_complete" />

        <TextView
            android:layout_width="@dimen/step_circle_size"
            android:layout_height="@dimen/step_circle_size"
            android:background="@drawable/step_circle_complete"
            android:gravity="center"
            android:text="Step4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:gravity="center"
            android:text="신고필증 발급을 위해 입력된 정보를 확인하시고\n배출예정일, 상세주소를 입력해주세요."
            android:textSize="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:background="@drawable/preview_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="13dp"
            android:text="대형폐기물 배출 신고필증"
            android:textSize="@dimen/title_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/content_padding"
                android:paddingBottom="10dp"
                android:text="* 금액: "
                android:textSize="@dimen/body_size_large" />

            <TextView
                android:id="@+id/priceTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:textSize="@dimen/body_size_large" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/content_padding"
                android:paddingBottom="10dp"
                android:text="* 신청일: "
                android:textSize="@dimen/body_size_large" />

            <TextView
                android:id="@+id/today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:textSize="@dimen/body_size_large" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/duedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/content_padding"
                android:paddingBottom="10dp"
                android:text="* 배출예정일: "
                android:textSize="@dimen/body_size_large" />

            <TextView
                android:id="@+id/select_date"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="@string/choose_date"
                android:textSize="@dimen/body_size_large"
                android:textStyle="italic" />

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/content_padding"
            android:paddingRight="@dimen/content_padding">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="전화번호"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_size" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="010-1234-5678"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_size" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="주소"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_size" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="서울시 서대문구"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_size" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="상세주소"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_size" />

                <EditText
                    android:id="@+id/detial_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:enabled="true"
                    android:gravity="left"
                    android:hint="(추가 상세 주소를 입력하세요.)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_size" />

            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/content_padding"
            android:paddingRight="@dimen/content_padding">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8034A08C"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="품목"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="품명"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="사이즈"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="수량"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_size" />

            </TableRow>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_marginBottom="15dp"
                android:fillViewport="true">

                <ListView
                    android:id="@+id/pdf_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/body_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></ListView>

            </ScrollView>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="@dimen/content_padding"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="발급 신청"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>